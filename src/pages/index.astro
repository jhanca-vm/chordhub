---
import BaseLayout from '@layouts/BaseLayout.astro'
import Hero from '@components/Hero.astro'
import Songs from '@components/Songs.astro'
---

<BaseLayout
  title="ChordHub: Explora. Aprende. Toca."
  description={
    'Encuentra letras y acordes precisos de tus canciones favoritas. Nos ' +
    'enfocamos en brindarte la informaciÃ³n que necesitas para tocar sin ' +
    'complicaciones.'
  }
>
  <header
    class:list={[
      'mx-auto w-full max-w-5xl px-5 pb-6 pt-4 sm:px-10 sm:pb-0 sm:pt-5',
      'xl:px-0'
    ]}
    slot="header"
  >
    <figure class="flex items-center">
      <img
        class="-mx-1 w-11 sm:w-12"
        src="/logo.png"
        alt=""
        width="64"
        height="64"
      />
      <figcaption>
        <span class="text-2xl font-semibold md:text-3xl">ChordHub</span>
        <small class="ml-0.5 block text-sm leading-none text-neutral-500">
          Explora. Aprende. Toca.
        </small>
      </figcaption>
    </figure>
  </header>
  <Hero />
  <Songs />
</BaseLayout>
